{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "AdBlock for Facebook",
  "description": "Removes all the ads/sponsored posts that you find in your Facebook news feed.",
  "version": "2.0.1",
  "background": {
    "scripts": ["main.js"],
    "persistent": false
  },
  "icons": {
    "128": "icon_small.png",
    "192": "icon.png"
  },
  "browser_action": {
    "default_title": "",
    "default_icon": "icon.png"
  },
  "permissions": ["*://www.facebook.com/*"],
  "manifest_version": 2
}
